
<%- include('./partials/header') %>
<!-- loader END -->
<!-- Header -->

<%- include('./partials/topMenu') %>

 <section class="m-profile">
    <div class="container">
        <h4 class="main-title mb-4">Your Screens</h4>
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="sign-user_card">
                    <div class="table-responsive pricing pt-2">
                        <table id="my-table" class="table">
                            <thead>
                                <tr>
                                    <th class="text-center prc-wrap"></th>
                                    <% screens.forEach( eachScreen => { %> 
                                        <th class="text-center prc-wrap">
                                            <div class="prc-box">
                                                <div class="h3 pt-4 text-white"><small> <%= eachScreen.name %> </small></div>
                                                <span class="type">Screen</span>
                                            </div>
                                        </th>
                                    <% } ) %>
                                   
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th class="text-center" scope="row">Pin</th>
                                    <% screens.forEach( eachScreen => { %> 
                                        <td class="text-center child-cell"> <%= eachScreen.pin %> </td>
                                    <% } ) %>
                                </tr>
                            </tbody>
                        </table>
                        <%- include('./partials/flashMessage') %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<%- include('./partials/footer') %>