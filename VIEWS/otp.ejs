<%- include('./partials/header') %>

<body>

  <!-- loader END -->
    <!-- Sign in Start -->
    <section class="sign-in-page">
     <div class="container h-100">
        <div class="row justify-content-center align-items-center h-100">
           <div class="col-md-6 col-sm-12 col-12 ">
              <div class="sign-user_card ">
                <div class="sign-in-page-data">
                  <div class="sign-in-from w-100 m-auto">
                     <h4 class="mt-3 text-white mb-0 text-center">Hi ! <%= otp.username %></h4>
                     <p class="text-white text-center">Enter otp to continue.</p>
                     <form class="mt-4" method="POST" action="/verifyOtp-<%=otp.id%>">
                        <div class="form-group">
                          <input type="text" class="form-control mb-0" id="exampleInputEmail2" placeholder="Enter OTP" name="enteredOtp" required>
                        </div>
                        <%- include('./partials/flashMessage') %>
                        <div class="d-inline-block w-100 text-center">
                           <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                     </form>
                  </div>
                </div>
              </div>
           </div>
        </div>
     </div>
  </section>

<%- include('./partials/footer') %>